
class Timer extends blend.component {
    model () {
        this.title = "Timer";
        this.sec = 0;
    }
    view () {
        return {{
            h2>{this.title}
            div.timer
                p(time)>{this.sec} seconds
                    span> are you here.
            button(stop && click=func)[type=button]>Stop
        }}
    }
    controller(data) {
        const take = blend.watch(this);

        take.build({
            create: {{
                p(stoped)>countdown stopped.
            }}
        });

        data.time = function () {
            data.sec++;
            take.it("time").updateState();
        }

        let count = setInterval(data.time, 1000);

        data.func = function() {
            take.it("time").refactor("stoped");
            take.it("stop").remove();
            clearInterval(count);
        }
    }
}

blend.class(Timer).render(".app");
