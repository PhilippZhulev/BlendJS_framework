class InputOutput extends flu.component {

    model () {
        this.prop = "philipp";
    }

    view () {
        return {{
            h1(hello)
               span(out)>{this.prop}
            input[type=text](in)
        }}
    }

    supply() {
        return {{
            div.item(item)
                span(text)

            div.control(control)
               button.edit(edit)>edit
               button.del(del)>delete
            input.edit_value[type=text](edit_val)
        }}
    }

    controller() {
        const reg = flu.reg(this);

        reg.it("hello").innerBefore("Hello world! I'm ");

        reg.onEvent.keydown({
            target: "in",
            run: function () {
                let val = this.value("in").get();

                this.it("out").inner(val);
            }
        });
    }

}

flu.class(InputOutput).render(".app");